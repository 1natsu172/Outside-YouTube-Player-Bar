    "babili-webpack-plugin": "0.x.x",
    "chromereload": "0.x.x",
    "del": "3.x.x",
    "gulp": "3.x.x",
    "gulp-bump": "2.x.x",
    "gulp-cache": "0.x.x",
    "gulp-clean-css": "^3.x.x",
    "gulp-filter": "5.x.x",
    "gulp-git": "2.x.x",
