{
  "name": "Outside-YouTube-Player-Bar",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/1natsu172/Outside-YouTube-Player-Bar.git"
  },
  "version": "3.0.0",
  "description": "Display YouTube's control bar outside the video.",
  "scripts": {
    "start": "npm run dev",
    "dev": "npm run build:assets && vite",
    "prebuild": "npm run clean:dist",
    "build": "npm run build:assets && tsc && vite build",
    "build:assets": "node ./scripts/copy-assets",
    "build:pack": "node ./scripts/pack",
    "postbuild": "npm run build:pack",
    "test": "run-s test:*",
    "test:tsc": "tsc -p ./tsconfig.test.json",
    "test:ava": "ava 'test/_dist/test/**/*.js' --verbose",
    "test:remove-dist": "shx rm -rf ./test/_dist",
    "preversion": "node ./scripts/bump-manifest $npm_new_version && git add manifest.json",
    "release-to-git": "node ./scripts/releaseNotesTemplate | gh release create $npm_package_version --notes-file -",
    "delivery": "npx chrome-webstore-upload-cli@2 upload --source dist.zip --auto-publish",
    "clean:dist": "shx rm -rf dist dist.zip"
  },
  "devDependencies": {
    "@1natsu/wait-element": "3.0.0",
    "@crxjs/vite-plugin": "^1.0.12",
    "@types/chrome": "0.0.192",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/sinon-chrome": "2.2.11",
    "@vitejs/plugin-react": "^1.3.0",
    "browser-env": "3.3.0",
    "chrome-webstore-upload-cli": "^2.1.0",
    "fs-extra": "^10.1.0",
    "git-semver-tags": "^4.1.1",
    "npm-run-all": "^4.1.2",
    "prettier": "2.7.1",
    "sass": "1.53.0",
    "shelljs": "0.8.5",
    "shx": "0.3.4",
    "sinon-chrome": "3.0.1",
    "typescript": "^4.6.3",
    "vite": "^2.9.9",
    "vite-plugin-static-copy": "^0.6.1"
  },
  "dependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "browserslist": [
    "Chrome >= 58"
  ]
}
