{
  "name": "Outside-YouTube-Player-Bar",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/1natsu172/Outside-YouTube-Player-Bar.git"
  },
  "version": "2.1.1",
  "description": "Display YouTube's control bar outside the video.",
  "scripts": {
    "start": "npm run dev",
    "dev": "parcel app/**/* app/manifest.json --no-hmr",
    "build": "parcel build app/**/* app/manifest.json",
    "lint": "standard",
    "test": "run-s test:*",
    "test:tsc": "tsc -p ./tsconfig.test.json",
    "test:ava": "ava 'test/_dist/test/**/*.js' --verbose",
    "test:remove-dist": "rimraf ./test/_dist",
    "webstore:update": "chrome-webstore-manager update $APP_ITEM_ID ./packages/*.zip",
    "webstore:publish": "chrome-webstore-manager publish $APP_ITEM_ID",
    "release-git": "release-it",
    "release-git:ci": "release-it -n",
    "release-git:no-increment": "release-it --no-increment",
    "clean:dist:": "shx rm -rf dist .cache",
    "clean:package:": "shx rm -rf package",
    "cz": "git-cz"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog-atom"
    }
  },
  "ava": {
    "require": [
      "ts-node/register",
      "babel-register",
      "babel-polyfill",
      "./test/helpers/browserEnv.js",
      "./test/helpers/chromeMock.js"
    ],
    "babel": "inherit"
  },
  "standard": {
    "globals": [
      "chrome"
    ],
    "parser": "babel-eslint"
  },
  "devDependencies": {
    "@1natsu/wait-element": "^1.2.0",
    "@types/chrome": "^0.x.x",
    "@types/sinon-chrome": "^2.2.0",
    "ava": "^0.24.0",
    "babel-core": "^6.26.3",
    "browser-env": "^3.2.4",
    "chrome-webstore-manager": "^0.4.1",
    "commitizen": "^2.9.6",
    "conventional-changelog-cli": "^1.3.16",
    "cz-conventional-changelog-atom": "^0.0.2",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.4",
    "npm-run-all": "^4.1.2",
    "parcel-bundler": "^1.11.0",
    "parcel-plugin-imagemin": "^2.1.3",
    "parcel-plugin-web-extension": "^1.5.1",
    "prettier": "^1.16.4",
    "release-it": "^7.2.0",
    "rimraf": "^2.6.2",
    "sass": "^1.17.0",
    "shx": "^0.3.2",
    "sinon-chrome": "^2.2.1",
    "standard": "10.x.x",
    "ts-node": "^4.1.0",
    "tslint": "^5.x.x",
    "tslint-config-prettier": "^1.6.0",
    "tslint-config-standard": "^7.0.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.6.2"
  },
  "dependencies": {
    "then-chrome": "^1.0.7"
  },
  "browserslist": [
    "Chrome >= 58"
  ]
}
