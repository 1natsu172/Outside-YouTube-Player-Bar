{
  "verbose": true,
  "src": {
    "tagName": "%s",
    "commitMessage": "Release v%s [ci skip]",
    "tagAnnotation": "Release %s",
    "beforeStartCommand": "git checkout master"
  },
  "github": {
    "release": true,
    "tokenRef": "GH_TOKEN",
    "releaseName": "Release v%s",
    "pushRepo": "git@github.com:1natsu172/Outside-YouTube-Player-Bar.git"
  },
  "npm": {
    "publish": false
  },
  "pkgFiles": ["package.json", "app/manifest.json"],
  "increment": "conventional:atom",
  "beforeChangelogCommand": "conventional-changelog -p atom -i CHANGELOG.md -s",
  "changelogCommand": "conventional-changelog -p atom | tail -n +3",
  "safeBump": false
}